<div class="container mt-4">
    <h2 class="mb-4">Productos</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Imagen</th>
                    <th>Precio</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model)
                {
                    <tr>
                        <td>@producto.Id</td>
                        <td>@producto.Nombre</td>
                        <td>
                            <img src="~/img/@producto.Imagen" class="img-fluid" width="100" alt="@producto.Nombre">
                        </td>
                        <td>@producto.Precio.ToString("C")</td>
                        <td>
                            <form asp-action="AgregarAlCarrito" method="post">
                                <input type="hidden" name="id" value="@producto.Id" />
                                <button type="submit" class="btn btn-primary">Comprar ahora</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a href="/Tienda/VerCarrito" class="btn btn-secondary mt-3">Ver carrito</a>
</div>